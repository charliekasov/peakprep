{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4002,
      "host": "127.0.0.1"
    },
    "hub": {
      "port": 4402,
      "host": "127.0.0.1"
    }
  }
}