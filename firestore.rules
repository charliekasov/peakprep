rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to students, assignments, and submissions
    // only for authenticated users. This is a secure default for this app,
    // as only the tutor (an authenticated user) should be able to modify data.
    match /{collection}/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
